<h1>Welcome to Jog Tracker</h1>
<div class="col-md-4 col-md-offset-4">
  <div>
    <div>
      <h1 class="text-center">Login</h1>
    </div>
    <div class="alert alert-danger error"></div>
    <form class="form col-md-12 center-block" name="login" id="login_form" data-parsley-validate>
      <div class="form-group">
        <input type="email" name="email" data-parsley-type="email" required data-parsley-required id="email" class="form-control input-lg"/>
      </div>
      <div class="form-group">
        <input type="password" class="form-control input-lg" placeholder="Password" name="password" required data-parsley-required id="password" >
      </div>
      <div class="form-group">
        <button class="btn btn-primary btn-lg btn-block" id="login_button">Sign In</button>
        <span class="pull-right"><a href="/signup">Register</a></span>
      </div>
    </form>
  </div>
</div>
