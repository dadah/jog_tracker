<div class="col-md-4 col-md-offset-4">
  <div>
    <div>
      <h1 class="text-center">Create your account</h1>
    </div>
    <div class="alert alert-danger error"></div>
    <form class="form col-md-12 center-block" name="signup" id="signup_form" data-parsley-validate>
      <div class="form-group">
        <input type="text" name="name" required data-parsley-required id="name" class="form-control input-lg"/>
      </div>
      <div class="form-group">
        <input type="email" name="email" data-parsley-type="email" required data-parsley-required id="email" class="form-control input-lg"/>
      </div>
      <div class="form-group">
        <input type="password" class="form-control input-lg" placeholder="Password" name="password" required data-parsley-required id="password" >
      </div>
      <div class="form-group">
        <button class="btn btn-primary btn-lg btn-block" id="signup_button">Sign Up</button>
        <span class="pull-right"><a href="/">Sign In</a></span>
      </div>
    </form>
  </div>
</div>
