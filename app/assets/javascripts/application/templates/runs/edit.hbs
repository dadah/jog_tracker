<h1>
  Register a run
</h1>
<div class="alert alert-success success"></div>
<div class="alert alert-danger error"></div>
</div>
<form name="run" id="run_form" data-parsley-validate>
  <div class="form-group">
    <label for="date">Date</label>
    <input type="date" name="date" required data-parsley-required id="date" value="{{run_date}}" class="form-control"/>
  </div>
  <div class="form-group">
    <label for="seconds">Time</label>
    <div class="min">
    <input type="number" name="hours" id="hours" min="0" data-parsley-min="0" value="{{run_hours}}" class="form-control" placeholder="hours"/>
    <input type="number" name="minutes" id="minutes" min="0" data-parsley-min="0" max="60" data-parsley-max="60" value="{{run_minutes}}" class="form-control" placeholder="minutes"/>
    <input type="number" name="seconds" id="seconds" min="0" data-parsley-min="0" max="60" data-parsley-max="60" required data-parsley-required value="{{run_seconds}}" class="form-control"  placeholder="seconds"/>
    </div>
  </div>
  <div class="form-group">
    <label for="distance">Distance (in meters)</label>
    <input type="number" name="distance" id="distance" min="0" data-parsley-min="0" required data-parsley-required value="{{distance}}" class="form-control"/>
  </div>
  <div class="form-group">
    <label>Average Speed</label>
    <span id="averageSpeed">{{average_speed}} km/h</span>
  </div>
  {{#if showsUser}}
  <div class="form-group">
    <label for="user">User</label>
    <select name="user" id="user" class="form-control">
      {{#select user.id}}
        {{#each users}}
          <option value="{{this.id}}">{{this.name}} - {{this.email}}</option>
        {{/each}}
      {{/select}}
    </select>
  </div>
  {{/if}}
  <button type="submit" id="create_button" class="btn btn-primary">Save</button>
</form>
